<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="POST" action="/groups/edit/{{group.id}}">
            <fieldset>
                <legend>Група {{group.name}}</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label">{{group.team1}}</label>
                    <div class="col-sm-4 ">
                        <input type="number" class="form-control" placeholder="позиция 1" name="position1" value="{{group.position1}}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">{{group.team2}}</label>
                    <div class="col-sm-4 ">
                        <input type="number" class="form-control" placeholder="позиция 2" name="position2" value="{{group.position2}}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">{{group.team3}}</label>
                    <div class="col-sm-4 ">
                        <input type="number" class="form-control" placeholder="позиция 3" name="position3" value="{{group.position3}}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">{{group.team4}}</label>
                    <div class="col-sm-4 ">
                        <input type="number" class="form-control" placeholder="позиция 4" name="position4" value="{{group.position4}}">
                    </div>
                </div>
                <!--<div class="form-group">-->
                    <!--<label class="col-sm-4 control-label" for="articleContent">Content</label>-->
                    <!--<div class="col-sm-6">-->
                        <!--<textarea class="form-control" id="articleContent" rows="5" name="content" required></textarea>-->
                    <!--</div>-->
                <!--</div>-->

                <div class="form-group">
                    <label class="col-sm-4 control-label">Ден</label>
                    <div class="col-sm-4 ">
                        <input type="number" class="form-control" id="day" placeholder="ден" name="day" value="{{dt.day}}" required >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Месец</label>
                    <div class="col-sm-4 ">
                        <input type="number" class="form-control" id="month" placeholder="месец" name="month" value="{{dt.month}}" required >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Час</label>
                    <div class="col-sm-4 ">
                        <input type="number" class="form-control" id="hour" placeholder="час" name="hour" value="{{dt.hour}}" required >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Минути</label>
                    <div class="col-sm-4 ">
                        <input type="number" class="form-control" id="minutes" placeholder="минути" name="minutes" value="{{dt.minute}}" required >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Група</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="group" placeholder="група" name="group" value="{{group.name}}" required >
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <!--<button type="reset" class="btn btn-default">Отказ</button>-->
                        <a class="btn btn-default" href="/">Отказ</a>
                        <button type="submit" class="btn btn-primary">Добави</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
